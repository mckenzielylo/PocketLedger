# =============================================================================
# POCKETLEDGER - PERSONAL FINANCE MANAGEMENT APPLICATION
# =============================================================================
# This file contains environment configuration for PocketLedger.
# Copy this file to .env and update the values according to your setup.
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="PocketLedger"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Application Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI Server
PHP_CLI_SERVER_WORKERS=4

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Default: SQLite (recommended for development)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL Configuration (for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pocketledger
# DB_USERNAME=root
# DB_PASSWORD=your_password_here
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci

# PostgreSQL Configuration (alternative)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=pocketledger
# DB_USERNAME=postgres
# DB_PASSWORD=your_password_here

# Database Options
DB_FOREIGN_KEYS=true
# DB_SOCKET=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=database

# =============================================================================
# BROADCASTING CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log

# =============================================================================
# FILESYSTEM CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
# For development (logs emails to storage/logs/laravel.log)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@pocketledger.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Configuration (for production)
# MAIL_MAILER=smtp
# MAIL_SCHEME=tls
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_FROM_ADDRESS="noreply@pocketledger.com"
# MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS CONFIGURATION (for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# VITE CONFIGURATION (Frontend Build Tool)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# POCKETLEDGER SPECIFIC CONFIGURATION
# =============================================================================

# Default Currency Settings
DEFAULT_CURRENCY=USD
DEFAULT_CURRENCY_SYMBOL=$

# Exchange Rate API (for currency conversion)
# EXCHANGE_RATE_API_KEY=your_api_key_here
# EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/

# File Upload Settings
MAX_FILE_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security Settings
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Telescope (Laravel Debug Toolbar)
# TELESCOPE_ENABLED=true

# Horizon (Queue Dashboard)
# HORIZON_ENABLED=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# For production, set these values:
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com
# LOG_LEVEL=error
# SESSION_SECURE_COOKIE=true
# DB_CONNECTION=mysql (or pgsql)
# MAIL_MAILER=smtp
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# FILESYSTEM_DISK=s3 (if using AWS S3)

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Generate application key: php artisan key:generate
# 3. Create database file (for SQLite): touch database/database.sqlite
# 4. Run migrations: php artisan migrate
# 5. Seed database: php artisan db:seed
# 6. Create storage link: php artisan storage:link
# 7. Install dependencies: composer install && npm install
# 8. Build assets: npm run build
# 9. Start server: php artisan serve
# =============================================================================
