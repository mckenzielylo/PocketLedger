# =============================================================================
# PocketLedger Environment Configuration
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="PocketLedger"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-app-name.onrender.com

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=pocketledger
DB_USERNAME=postgres
DB_PASSWORD=

# For Render.com PostgreSQL service:
# DB_HOST=your-postgres-service-name
# DB_DATABASE=pocketledger
# DB_USERNAME=postgres
# DB_PASSWORD=your-postgres-password

# For Railway.app PostgreSQL service:
# DB_HOST=your-postgres-service.railway.internal
# DB_DATABASE=railway
# DB_USERNAME=postgres
# DB_PASSWORD=your-postgres-password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_STORE=file
CACHE_PREFIX=pocketledger

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=sync

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@pocketledger.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================================================
# BROADCASTING CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log

# =============================================================================
# FILESYSTEM CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# AWS S3 CONFIGURATION (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# SANCTUM CONFIGURATION
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=your-app-name.onrender.com,localhost,127.0.0.1,::1

# =============================================================================
# POCKETLEDGER SPECIFIC SETTINGS
# =============================================================================
# Default currency for new users
DEFAULT_CURRENCY=USD

# Exchange rate API (optional - for currency conversion)
EXCHANGE_RATE_API_KEY=
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/

# File upload settings
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Session security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# DEVELOPMENT SETTINGS (Set to false in production)
# =============================================================================
TELESCOPE_ENABLED=false
DEBUG_BAR_ENABLED=false
