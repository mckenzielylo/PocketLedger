# =============================================================================
# RAILWAY.APP ENVIRONMENT VARIABLES FOR POCKETLEDGER
# =============================================================================
# Copy this file to .env and configure for your Railway deployment
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=PocketLedger
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.railway.app
APP_KEY=base64:your-app-key-here

# =============================================================================
# DATABASE SETTINGS (PostgreSQL - Railway provides these)
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_DATABASE=${{Postgres.PGDATABASE}}
DB_USERNAME=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}

# =============================================================================
# SESSION & CACHE SETTINGS
# =============================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

CACHE_STORE=file
QUEUE_CONNECTION=sync

# =============================================================================
# MAIL SETTINGS
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@pocketledger.com
MAIL_FROM_NAME=PocketLedger

# =============================================================================
# POCKETLEDGER SPECIFIC SETTINGS
# =============================================================================
DEFAULT_CURRENCY=USD
DEFAULT_CURRENCY_SYMBOL=$
MAX_FILE_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =============================================================================
# EXCHANGE RATE API (Optional)
# =============================================================================
EXCHANGE_RATE_API_KEY=your-api-key-here
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/

# =============================================================================
# RAILWAY SPECIFIC SETTINGS
# =============================================================================
RAILWAY_ENVIRONMENT=production
PORT=80
SEED_DATABASE=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=your-app-name.railway.app
