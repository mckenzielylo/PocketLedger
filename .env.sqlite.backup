# =============================================================================
# POCKETLEDGER - PERSONAL FINANCE MANAGEMENT APPLICATION
# =============================================================================
# Local development environment configuration
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="PocketLedger"
APP_ENV=local
APP_KEY=base64:xwcVPFMN98JqY9MPNhotuvUzvNaoTTReJj3ucQcd6oE=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Application Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI Server
PHP_CLI_SERVER_WORKERS=4

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local Development: SQLite (easier setup)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# PostgreSQL Configuration (for production or when you install PostgreSQL locally)
# Uncomment these lines and comment out SQLite above when ready to use PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=pocketledger
# DB_USERNAME=postgres
# DB_PASSWORD=your_password_here
# DB_CHARSET=utf8
# DB_COLLATION=utf8_unicode_ci

# MySQL Configuration (alternative)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pocketledger
# DB_USERNAME=root
# DB_PASSWORD=your_password_here
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci

# Database Options
DB_FOREIGN_KEYS=true
# DB_SOCKET=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=database

# =============================================================================
# BROADCASTING CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log

# =============================================================================
# FILESYSTEM CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
# For development (logs emails to storage/logs/laravel.log)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@pocketledger.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Configuration (for production)
# MAIL_MAILER=smtp
# MAIL_SCHEME=tls
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_FROM_ADDRESS="noreply@pocketledger.com"
# MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS CONFIGURATION (for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# VITE CONFIGURATION (Frontend Build Tool)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# POCKETLEDGER SPECIFIC CONFIGURATION
# =============================================================================

# Default Currency Settings
DEFAULT_CURRENCY=USD
DEFAULT_CURRENCY_SYMBOL=$

# Exchange Rate API (for currency conversion)
# EXCHANGE_RATE_API_KEY=your_api_key_here
# EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/

# File Upload Settings
MAX_FILE_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security Settings
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Telescope (Laravel Debug Toolbar)
# TELESCOPE_ENABLED=true

# Horizon (Queue Dashboard)
# HORIZON_ENABLED=false
